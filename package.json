{
  "name": "@rout-horizon/horizon-testnet-contracts-interface",
  "version": "1.2.0",
  "description": "A library for interacting with Horizon smart contracts",
  "source": "./src/index.ts",
  "main": "./build/node/src/index.js",
  "module": "./build/node/src/index.js",
  "browser": "./build/node/src/index.js",
  "types": "./build/node/src/index.d.ts",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "build": "node ./codegen.js",
    "build2": "node ./codegen.js && npm run build-browser2 && npm run build-node",
    "build-node": "tsc -p tsconfig.node.json",
    "build-browser2": "webpack --mode=production",
    "build-browser": "webpack --mode=production --max-old-space-size=4096",
    "examples:node": "ts-node --project tsconfig.node.json ./examples/signer-example.js",
    "examples:browser": "npm run build-browser && http-server -o ./examples/browser-example.html -c-1",
    "lint": "eslint './src/**/*.{js,ts,tsx}' && tsc",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,tsx}'",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest --forceExit --coverage --no-cache",
    "tsc": "tsc --noemit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rout-horizon/horizon-testnet-contracts-interface"
  },
  "author": "HorizonProtocol",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rout-horizon/horizon-testnet-contracts-interface/issues"
  },
  "dependencies": {
    "@horizon-protocol/smart-contract": "npm:@rout-horizon/horizon-testnet@^2.8.0",
    "ethers": "5.5.3",
    "lodash": "^4.17.21",
    "web3-utils": "1.2.11",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/plugin-transform-runtime": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/jest": "26.0.22",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "babel-jest": "26.2.2",
    "babel-loader": "^8.2.3",
    "chokidar": "^3.5.2",
    "chokidar-cli": "^2.1.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "http-server": "^14.0.0",
    "husky": "4.2.5",
    "jest": "26.6.3",
    "lint-staged": "^12.1.2",
    "npm-watch": "^0.11.0",
    "prettier": "^2.5.1",
    "ts-loader": "8.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "babel-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 80,
        "statements": 80
      }
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/build"
    ]
  }
}
